{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/gpt-5-mini",
  "small_model": "github-copilot/gpt-5-mini",
  "default_agent": "github-copilot/gpt-5-mini",
  "autoupdate": true,
  "snapshot": true,
  "share": "disabled",
  "enabled_providers": [
    "github-copilot",
    "opencode",
  ],
  "mcp": {
    "atlassian": {
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/mcp",
      "enabled": false
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": false
    },
  },
  "agent": {
    "explore": {
      "model": "github-copilot/gpt-5-mini"
    },
    "general": {
      "model": "github-copilot/gpt-5-mini"
    },
    "title": {
      "model": "github-copilot/gpt-5-mini"
    },
    "summary": {
      "model": "github-copilot/gpt-5-mini"
    },
    "compaction": {
      "model": "github-copilot/gpt-5-mini"
    },
    "plan": {
      "model": "github-copilot/claude-sonnet-4.6"
    },
  },
  "watcher": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      "out/**",
      ".git/**",
      "vendor"
    ]
  },
}
