auto-update-channel = tip
window-save-state = always
shell-integration = fish

# Theme
font-family = JetBrains Mono
font-size = 12
font-thicken = true
theme = Dracula
mouse-hide-while-typing = true
scrollback-limit = 1000000
adjust-cell-width = -5%
adjust-cell-height = 20%
window-inherit-font-size = false

# Basic Navigation
keybind = super+n=new_window
keybind = super+t=new_tab
keybind = ctrl+a>c=new_tab

# Splits (Fixed the +h syntax)
keybind = ctrl+a>h=goto_split:left
keybind = ctrl+a>j=goto_split:bottom
keybind = ctrl+a>k=goto_split:top
keybind = ctrl+a>l=goto_split:right

# Creating Splits (Fixed backslash)
keybind = ctrl+a>shift+backslash=new_split:right
keybind = ctrl+a>minus=new_split:down
keybind = ctrl+a>z=toggle_split_zoom

# Creating Splits (directional)
keybind = ctrl+a>shift+h=new_split:left
keybind = ctrl+a>shift+j=new_split:down
keybind = ctrl+a>shift+k=new_split:up
keybind = ctrl+a>shift+l=new_split:right
keybind = ctrl+a>shift+f=toggle_split_zoom

# Tab Switching
keybind = ctrl+a>n=next_tab
keybind = ctrl+a>p=previous_tab

# System (Fixed reload)
keybind = super+shift+r=reload_config
