[push]
	default = current
	followTags = true # always push the tags (usually it is done manually through --follow-tags)
[user]
	name = Bruno Luiz Silva
	email = contact@brunoluiz.net
[core]
	editor = vim
	attributesfile = ~/.gitattributes
	excludesfile = ~/.gitignore_global
[alias]
	undo = reset --soft HEAD^ # alias to undo my shit
	changelog = log --pretty=format:'%Cred%h%Creset - %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[merge]
[status]
	showUntrackedFiles = all # do not hide anything from me git
[include]
	path = .gitconfig.local
[filter "strongbox"]
	clean = strongbox -clean %f
	smudge = strongbox -smudge %f
	required = true
[diff "strongbox"]
	textconv = strongbox -diff
[url "git@github.com:"]
	insteadOf = https://github.com/
[pull]
	default = current
